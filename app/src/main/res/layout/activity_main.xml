<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/callbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="100dp"
        android:onClick="onCall"/>

    <Button
        android:id="@+id/smsbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="150dp"
        android:onClick="onSMS"/>

    <Button
        android:id="@+id/emailbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="200dp"
        android:onClick="onEmail"/>

    <Button
        android:id="@+id/browserbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Browser"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="250dp"
        android:onClick="onBrowser"/>


    <ImageView
        android:id="@+id/imgView"
        android:layout_width="82dp"
        android:layout_height="76dp"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/face" />

    <TextView
        android:layout_width="186dp"
        android:layout_height="40dp"
        android:layout_above="@id/btnByFile"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="643dp"
        android:text="Stalker app"
        android:textColorHighlight="@color/purple_200"
        android:textSize="25dp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filename..."
        android:id="@+id/tvImageInfo"
        android:layout_above="@id/btnByFile"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnByFile"
        android:onClick="onTakeByFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take as File"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/btnBitmap"
        android:onClick="onTakeByBitmap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take a photo"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>